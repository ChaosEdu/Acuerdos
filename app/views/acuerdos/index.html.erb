<legend>Listas de acuerdos de la sesión</legend>

<table class="table table-hover">
  <thead>
    <th>Título</th>
    <th>Detalles</th>
    <th>Lista acuerdo</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @acuerdos.each do |acuerdo| %>
 <tbody> 
  <tr>
    <td><%= acuerdo.titulo %></td>
    <td><%= acuerdo.detalles %></td>
    <td><%= acuerdo.lista_acuerdo_id %></td>
    <td><%= link_to '  ', acuerdo, :class => "icon-arrow-left"%></td>
    <td><%= link_to '  ', edit_acuerdo_path(acuerdo) :class => "icon-edit" %></td>
    <td><%= link_to '  ', acuerdo, method: :delete, data: { confirm: 'Esta seguro que desea borrar?' } , :class => "icon-remove"%></td>
  </tr>
 </tbody>
<% end %>
</table>

<br />

