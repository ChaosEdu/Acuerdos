<%= form_for(@email) do |f| %>
  <% if @email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
      <% @email.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= f.label :correo %></strong><br />
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <strong><%= f.label :tipo_email_id, "Tipo de email" %></strong><br />
    <%= f.select :tipo_email_id, TipoEmail.all.collect {|p| [ p.nom_tipo_email, p.id ] }, { :include_blank => true }  %>
  </div>
  <div class="field">
    <strong><%= f.label :empleado_id, "Empleado al que pertenece" %></strong><br />
    <%= f.select :empleado_id, Empleado.all.collect {|p| [ p.nombre, p.id ] }, { :include_blank => true } %>
  </div>
  <div class="actions">
    <%= f.submit "#{ f.object.new_record? ? 'Crear email': 'Actualizar email'}", :class => "btn" %>
  </div>
<% end %>
