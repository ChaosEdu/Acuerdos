<table>
  <tr>
    <th>Correo</th>
    <th>Tipo email</th>
    <th>Empleado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.correo %></td>
    <td><%= email.tipo_email.try(:nom_tipo_email) %></td>
    <td><%= email.empleado.try(:nombre) %></td>
    <td><%= link_to 'Mostrar', email %></td>
    <td><%= link_to 'Editar', edit_email_path(email) %></td>
    <td><%= link_to 'Destruir', email, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
  </tr>
<% end %>
</table>

