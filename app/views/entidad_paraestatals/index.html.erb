<legend>Listado de entidades paraestatales</legend>
<div class = "container">
    <table class="table table-hover">
	<thead>
        <th>Nombre</th>
        <th>Tipo de Entidad</th>
        <th>Órgano de Gobierno</th>
        <th>Secretaría</th>
        <th></th>
        <th></th>
        <th></th>
    </thead>
 <% @entidad_paraestatals.each do |entidad_paraestatal| %>
	<tbody>
	 <tr>
		<td><%= entidad_paraestatal.nom_entidad %></td>
		<td><%= entidad_paraestatal.try(:tipo_entidad).try(:nom_tipo_entidad) %></td>
		<td><%= entidad_paraestatal.try(:organo_de_gobierno).try(:nom_organo) %></td>
		<td><%= entidad_paraestatal.try(:secretaria).try(:nom_secretaria) %></td>
		<td><%= link_to 'Mostrar', entidad_paraestatal ,  :class => "icon-th-list" %></td>
		<td><%= link_to 'Editar', edit_entidad_paraestatal_path(entidad_paraestatal), :class => "icon-edit"%></td>
		<td><%= link_to ' Destruir ', entidad_paraestatal , method: :delete, data: { confirm: '¿Está seguro que desea borrarlo?' }  %></td>
	  </tr>
	</tbody>
<% end %>
</table>

<br />

<i class = "icon-plus"></i><%= link_to 'Agregar Entidad Paraestatal', new_entidad_paraestatal_path %>
