<h1>Listado de secretarías</h1>

<table>
  <tr>
    <th>Nombre de la secretaría</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @secretaria.each do |secretarium| %>
  <tr>
    <td><%= secretarium.nom_secretaria %></td>
    <td><%= link_to 'Mostrar', secretarium %></td>
    <td><%= link_to 'Editar', edit_secretarium_path(secretarium) %></td>
    <td><%= link_to 'Destruir', secretarium, method: :delete, data: { confirm: 'Está seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

