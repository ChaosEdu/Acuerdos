<h1>Listado de teléfonos</h1>

<table>
  <tr>
    <th>Número de teléfono</th>
    <th>Tipo de teléfono</th>
    <th>Empleado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @telefonos.each do |telefono| %>
  <tr>
    <td><%= telefono.num_telefono %></td>
    <td><%= telefono.tipo_tel.try(:nom_tipo_tel) %></td>
    <td><%= telefono.empleado.try(:nombre) %></td>
    <td><%= link_to 'Mostrar', telefono %></td>
    <td><%= link_to 'Editar', edit_telefono_path(telefono) %></td>
    <td><%= link_to 'Destruir', telefono, method: :delete, data: { confirm: '¿Está seguro que desea borrarlo?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo teléfono', new_telefono_path %>
