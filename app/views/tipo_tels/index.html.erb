<legend>Listado de los tipos de teléfonos</legend>

<table class="table table-hover">
  <thead>
    <th>Tipo de teléfono</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @tipo_tels.each do |tipo_tel| %>
  <tr>
    <td><%= tipo_tel.nom_tipo_tel %></td>
    <td><%= link_to '  ', tipo_tel, :class =>"icon-th-list" %></td>
    <td><%= link_to '  ', edit_tipo_tel_path(tipo_tel), :class=>"icon-edit" %></td>
    <td><%= link_to '  ', tipo_tel, method: :delete, data: { confirm: 'Está seguro?' } , :class => "icon-remove"%></td>
  </tr>
<% end %>
</table>

<br />

